                  </GridPane>
               </top>
               <center>
                  <TableView fx:id="lectureTable" BorderPane.alignment="CENTER">
                    <columns>
                      <TableColumn fx:id="numberColumn" prefWidth="85.0" resizable="false" text="Number" />
                      <TableColumn fx:id="nameColumn" prefWidth="200.0" resizable="false" text="Name" />
                      <TableColumn fx:id="professorColumn" prefWidth="109.0" resizable="false" text="Professor" />
                      <TableColumn fx:id="creditColumn" minWidth="0.0" prefWidth="134.0" resizable="false" sortType="DESCENDING" text="Credit" />

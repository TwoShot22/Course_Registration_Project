<StackPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="home.controllers.TableController">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="800.0">
         <top>
            <Pane prefHeight="150.0" style="-fx-background-color: #2d75e8;" BorderPane.alignment="CENTER">
            	<children>
            	<Label layoutX="48.0" layoutY="28.0" text="Select Lecture" textFill="WHITE">
            	<font>
              	    <Font name="Arial" size="60.0" />
             	 </font>
             	 </Label>
            	<Label layoutX="61.0" layoutY="97.0" text="Learning Management System" textFill="WHITE">
               	<font>
                	  <Font name="Arial" size="22.0" />
               	</font>
            	</Label>
         </children></Pane>
         </top>
         <center>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <top>
                  <GridPane BorderPane.alignment="CENTER">
                    <columnConstraints>
                      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="161.0" minWidth="10.0" prefWidth="135.0" />
                      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="141.0" minWidth="10.0" prefWidth="127.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="230.0" minWidth="10.0" prefWidth="163.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="225.0" minWidth="10.0" prefWidth="187.0" />
                        <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="133.0" minWidth="10.0" prefWidth="69.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <TextField prefHeight="33.0" prefWidth="154.0" GridPane.columnIndex="3" />
                        <Button mnemonicParsing="false" style="-fx-graphic: url('images/Search.png'); -fx-background-color:transparent;" GridPane.columnIndex="4" />
                        <ComboBox fx:id="campusSelect" prefWidth="150.0" promptText="Campus" visibleRowCount="2"/>
                        <ComboBox fx:id="collegeSelect" prefWidth="150.0" promptText="College" GridPane.columnIndex="1" />
                        <ComboBox fx:id="departmentSelect" prefHeight="79.0" prefWidth="165.0" promptText="Department" GridPane.columnIndex="2" />
